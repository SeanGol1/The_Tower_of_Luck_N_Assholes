<Window x:Class="MosterGenWPF.Startup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MosterGenWPF"
        mc:Ignorable="d"
        Title="Startup" Height="450" Width="800">
    <Grid OpacityMask="#FF96FC32">
        <Grid.Background>
            <ImageBrush ImageSource="img/StartupBackground.jpg"/>
        </Grid.Background>

        <Button Content="Showtime!" HorizontalAlignment="Left" Margin="565,330,0,0" VerticalAlignment="Top" Width="200" Height="60" Name="btnStart" Click="BtnStart_Click" FontSize="20" FontFamily="Terminator Two" Background="Red"/>
        <ComboBox HorizontalAlignment="Left" Margin="35,100,0,0" VerticalAlignment="Top" Width="200" Name="cbbPlayers" FontSize="20" FontFamily="Stencil">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFFF0C0C"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label Content="Welcome to the Tower of Luck'n Assholes!" HorizontalAlignment="Left" Margin="55,10,0,0" VerticalAlignment="Top" FontSize="30" FontFamily="Showcard Gothic"/>
        <Label Content="Please Choose your Players:" HorizontalAlignment="Left" Margin="35,71,0,0" VerticalAlignment="Top" FontFamily="Stencil" Background="#B2FFFFFF" Width="200"/>
        <Label Content="Half Speed to stand up." HorizontalAlignment="Left" Margin="391,69,0,0" VerticalAlignment="Top" Background="#BFFFFFFF"/>
        <Label Content="Choose any Non-Magical Starting item in PHB for starting equipment." HorizontalAlignment="Left" Margin="391,100,0,0" VerticalAlignment="Top" Background="#BFFFFFFF"/>
        <Label Content="Free Action to switch weapons." HorizontalAlignment="Left" Margin="391,130,0,0" VerticalAlignment="Top" Background="#BFFFFFFF"/>
        <Label Content="10 mins to move between rooms." HorizontalAlignment="Left" Margin="391,161,0,0" VerticalAlignment="Top" Background="#BFFFFFFF"/>
        <Label Content="Long Rests at Rooms with Dead Monsters." HorizontalAlignment="Left" Margin="391,194,0,0" VerticalAlignment="Top" Background="#BFFFFFFF"/>
        <Label Content="Rooms Are 120ft tall." HorizontalAlignment="Left" Margin="391,224,0,0" VerticalAlignment="Top" Background="#BFFFFFFF"/>

        <Button Content="Setup Room!" HorizontalAlignment="Left" Margin="35,161,0,0" VerticalAlignment="Top" Width="200" Height="60" x:Name="btnRoomSetup" FontSize="20" FontFamily="Terminator Two" Background="#FFE5E5E5" Click="BtnRoomSetup_Click"/>


    </Grid>
</Window>
